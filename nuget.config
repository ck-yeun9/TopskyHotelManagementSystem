<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- 清除全局包源，只使用项目特定的包源 -->
    <clear />
    
    <!-- 官方NuGet源 -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    
    <!-- 内部包源 -->
    <add key="EOM" value="https://nuget.oscode.top/repository/nuget-hosted/" />
    
    <!-- 本地文件源（用于开发测试） -->
    <add key="Local Packages" value=".\packages" />
  </packageSources>
  
  <packageSourceMapping>
    <!-- 包源映射，确保特定包从特定源获取 -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    <packageSource key="Company Internal">
      <package pattern="Company.*" />
      <package pattern="Internal.*" />
    </packageSource>
  </packageSourceMapping>
  
  <config>
    <!-- 全局包安装路径 -->
    <add key="globalPackagesFolder" value=".\packages" />
    
    <!-- 包还原设置 -->
    <add key="repositoryPath" value=".\packages" />
  </config>
  
  <packageRestore>
    <!-- 自动包还原 -->
    <add key="enabled" value="True" />
    <add key="automatic" value="True" />
  </packageRestore>
</configuration>